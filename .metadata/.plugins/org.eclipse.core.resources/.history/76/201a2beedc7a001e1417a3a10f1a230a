package FileSearchTool;

import java.util.Scanner;

public class FileSearchCriteria {
    private String fileName;
    private long minSize;
    private long maxSize;
    private boolean includeSubdirectories;

    public void inputCriteria(Scanner scanner) {
        System.out.print("Enter file name (or leave empty for all files): ");
        fileName = scanner.nextLine();

        System.out.print("Enter minimum file size (in bytes, or 0 for any size): ");
        minSize = scanner.nextLong();

        System.out.print("Enter maximum file size (in bytes, or 0 for any size): ");
        maxSize = scanner.nextLong();

        System.out.print("Include subdirectories (yes/no): ");
        includeSubdirectories = scanner.next().equalsIgnoreCase("yes");
    }

    public String getFileName() {
        return fileName;
    }

    public long getMinSize() {
        return minSize;
    }

    public long getMaxSize() {
        return maxSize;
    }

    public boolean isIncludeSubdirectories() {
        return includeSubdirectories;
    }
}
